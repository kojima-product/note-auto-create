# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# note.com credentials
NOTE_EMAIL=your_email@example.com
NOTE_PASSWORD=your_password_here

# Model settings (opus, sonnet, or haiku)
USE_MODEL=haiku

# Web Search API (optional - for fresh news)
# Get your API key from https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Email notifications (optional - Gmail SMTP)
# 1. Enable 2FA on your Google account
# 2. Create an App Password: https://myaccount.google.com/apppasswords
GMAIL_ADDRESS=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here
NOTIFY_EMAIL=notification_recipient@example.com  # Optional: defaults to GMAIL_ADDRESS
